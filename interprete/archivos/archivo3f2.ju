    print("Lista final: " + cadena);
}

void imprimirMatriz(){
    print("========= Matriz =========");
    var i: int;
    var j: int;

    for (i = 0; i < length(matriz); i = i + 1) {
        var fila: string = "";
        for (j = 0; j < length(matriz[i]); j = j + 1) {
            fila = fila + " " + matriz[i][j];
        }
        print(fila);
    }
}

