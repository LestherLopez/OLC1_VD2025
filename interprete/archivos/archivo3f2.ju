// ================= FUNCION DIFICIL =================
// Funcion tipo Ackermann (ALTA DIFICULTAD)
int funcionDificil(int m, int n){
    if (m == 0) {
        return n + 1;
    }
    if (m > 0 && n == 0) {
        return funcionDificil(m - 1, 1);
    }
    return funcionDificil(m - 1, funcionDificil(m, n - 1));
}

// ================= FUNCIONES =================

void probarFuncionDificil(){
    print("========= Funcion Dificil =========");
    var resultado: int = funcionDificil(3, 4);
    print("Resultado funcionDificil(3,4): " + resultado);
}

double promedioNotas(){
    var i: int = 0;
    var suma: double = 0.0;

    for (i = 0; i < length(notas); i = i + 1) {
        suma = suma + notas[i];
    }

    return suma / length(notas);
}

void listasDinamicas(){
